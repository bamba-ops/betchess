{
    "manifest_version": 3,
    "name": "Betchess",
    "version": "1.0",
    "permissions": ["activeTab", "scripting"] ,
    "host_permissions": ["*://www.chess.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "description": "A Chrome extension for betting on chess with cryptocurrency.",
    "action": {
      "default_popup": "popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.chess.com/*"],
        "js": ["scripts/content.js"]
      }
    ]
  }
  